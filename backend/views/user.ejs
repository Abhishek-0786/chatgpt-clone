<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#007bff">
    <title>GenX EV Charging</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA00C5oMIAZe3CQzg107eG1SgdPCdPyq5o&libraries=places&region=IN"></script>
    
    <!-- Google Maps MarkerClusterer Library -->
    <script src="https://unpkg.com/@googlemaps/markerclusterer@2.4.0/dist/index.min.js"></script>
    
    <!-- Razorpay Checkout -->
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    
    
    <!-- User Panel Styles -->
    <link rel="stylesheet" href="/user-panel/styles/main.css">
    
    <!-- PWA Meta Tags -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="GenX EV">
</head>
<body>
    <!-- Loading Screen -->
    <div id="loadingScreen" class="loading-screen">
        <div class="loading-spinner">
            <i class="fas fa-bolt fa-spin"></i>
            <p>Loading...</p>
        </div>
    </div>

    <!-- Auth Screen (Login/Register) -->
    <div id="authScreen" class="auth-screen" style="display: none;">
        <!-- Auth content will be loaded here -->
    </div>

    <!-- Main App Container -->
    <div id="appContainer" class="app-container" style="display: none;">
        <!-- Top Header -->
        <header class="app-header">
            <button class="hamburger-menu" id="hamburgerMenu" onclick="window.toggleMobileMenu()">
                <i class="fas fa-bars"></i>
            </button>
            <div class="header-content">
                <h1 class="app-title" id="pageTitle">GenX EV</h1>
                <div class="header-actions">
                    <button class="header-btn" id="walletBtn" onclick="window.showWalletQuickView()">
                        <i class="fas fa-wallet"></i>
                        <span id="walletBalance">₹0</span>
                    </button>
                    <button class="header-btn" id="profileBtn" onclick="window.loadProfileModule()">
                        <i class="fas fa-user-circle"></i>
                    </button>
                </div>
            </div>
        </header>

        <!-- Mobile Menu Overlay -->
        <div class="mobile-menu-overlay" id="mobileMenuOverlay" onclick="window.toggleMobileMenu()"></div>

        <!-- Mobile Sidebar -->
        <nav class="mobile-sidebar" id="mobileSidebar">
            <div class="mobile-sidebar-header">
                <h2 style="font-size: 18px; font-weight: 600;">GenX EV</h2>
                <button class="mobile-sidebar-close" onclick="window.toggleMobileMenu()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <a href="#" class="mobile-nav-item active" data-page="dashboard" onclick="window.loadDashboard(); window.toggleMobileMenu(); return false;">
                <i class="fas fa-home"></i>
                <span>Home</span>
            </a>
            <a href="#" class="mobile-nav-item" data-page="stations" onclick="window.loadStationsModule(); window.toggleMobileMenu(); return false;">
                <i class="fas fa-map-marker-alt"></i>
                <span>Stations</span>
            </a>
            <a href="#" class="mobile-nav-item" data-page="vehicles" onclick="window.loadVehiclesModule(); window.toggleMobileMenu(); return false;">
                <i class="fas fa-car"></i>
                <span>My Vehicles</span>
            </a>
            <a href="#" class="mobile-nav-item" data-page="wallet" onclick="window.loadWalletModule(); window.toggleMobileMenu(); return false;">
                <i class="fas fa-wallet"></i>
                <span>Wallet</span>
            </a>
            <a href="#" class="mobile-nav-item" data-page="sessions" onclick="window.loadSessionsModule(); window.toggleMobileMenu(); return false;">
                <i class="fas fa-history"></i>
                <span>Sessions</span>
            </a>
            <a href="#" class="mobile-nav-item" data-page="profile" onclick="window.loadProfileModule(); window.toggleMobileMenu(); return false;">
                <i class="fas fa-user"></i>
                <span>Profile</span>
            </a>
        </nav>

        <!-- Sidebar Navigation (Desktop Only) -->
        <nav class="sidebar-nav" id="sidebarNav" style="display: none;">
            <a href="#" class="sidebar-nav-item active" data-page="dashboard" onclick="window.loadDashboard(); return false;">
                <i class="fas fa-home"></i>
                <span>Home</span>
            </a>
            <a href="#" class="sidebar-nav-item" data-page="stations" onclick="window.loadStationsModule(); return false;">
                <i class="fas fa-map-marker-alt"></i>
                <span>Stations</span>
            </a>
            <a href="#" class="sidebar-nav-item" data-page="vehicles" onclick="window.loadVehiclesModule(); return false;">
                <i class="fas fa-car"></i>
                <span>My Vehicles</span>
            </a>
            <a href="#" class="sidebar-nav-item" data-page="wallet" onclick="window.loadWalletModule(); return false;">
                <i class="fas fa-wallet"></i>
                <span>Wallet</span>
            </a>
            <a href="#" class="sidebar-nav-item" data-page="sessions" onclick="window.loadSessionsModule(); return false;">
                <i class="fas fa-history"></i>
                <span>Sessions</span>
            </a>
            <a href="#" class="sidebar-nav-item" data-page="profile" onclick="window.loadProfileModule(); return false;">
                <i class="fas fa-user"></i>
                <span>Profile</span>
            </a>
        </nav>

        <!-- Main Content Area -->
        <main class="app-main" id="appMain">
            <!-- Content will be loaded here dynamically -->
        </main>

        <!-- Bottom Navigation (Mobile Only) -->
        <nav class="bottom-nav">
            <a href="#" class="nav-item active" data-page="dashboard" onclick="window.loadDashboard(); return false;">
                <i class="fas fa-home"></i>
                <span>Home</span>
            </a>
            <a href="#" class="nav-item" data-page="stations" onclick="window.loadStationsModule(); return false;">
                <i class="fas fa-map-marker-alt"></i>
                <span>Stations</span>
            </a>
            <a href="#" class="nav-item" data-page="wallet" onclick="window.loadWalletModule(); return false;">
                <i class="fas fa-wallet"></i>
                <span>Wallet</span>
            </a>
            <a href="#" class="nav-item" data-page="sessions" onclick="window.loadSessionsModule(); return false;">
                <i class="fas fa-history"></i>
                <span>Sessions</span>
            </a>
            <a href="#" class="nav-item" data-page="profile" onclick="window.loadProfileModule(); return false;">
                <i class="fas fa-user"></i>
                <span>Profile</span>
            </a>
        </nav>

        <!-- Active Session Snackbar (if charging) -->
        <div id="activeSessionBanner" class="active-session-banner" style="display: none;" onclick="window.viewActiveSession()">
            <div class="banner-content">
                <div class="banner-info">
                    <i class="fas fa-bolt"></i>
                    <div>
                        <strong>Charging Active</strong>
                        <span id="bannerEnergy">0 kWh</span>
                    </div>
                </div>
                <div class="banner-action">
                    <span>Tap to view</span>
                    <i class="fas fa-chevron-right"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Up Wallet Modal -->
    <div id="topUpWalletModal" class="modal" style="display: none;" onclick="if(event.target === this) window.closeTopUpModal()">
        <div class="modal-content" onclick="event.stopPropagation()">
            <div class="modal-header">
                <h2>Top Up Wallet</h2>
                <button class="modal-close" onclick="window.closeTopUpModal()" type="button">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="topUpWalletForm" onsubmit="window.handleTopUpSubmit(event)">
                <div class="form-group">
                    <label class="form-label">Select Amount</label>
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px; margin-bottom: 12px;">
                        <button type="button" class="btn btn-outline quick-amount-btn" data-amount="100" onclick="window.selectQuickAmount(100)">
                            ₹100
                        </button>
                        <button type="button" class="btn btn-outline quick-amount-btn" data-amount="500" onclick="window.selectQuickAmount(500)">
                            ₹500
                        </button>
                        <button type="button" class="btn btn-outline quick-amount-btn" data-amount="1000" onclick="window.selectQuickAmount(1000)">
                            ₹1000
                        </button>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Or Enter Custom Amount (₹)</label>
                    <input type="number" class="form-input" id="customAmountInput" name="amount" required min="1" step="0.01" placeholder="Enter amount (e.g., 250.00)" oninput="window.updateCustomAmount()">
                    <small>Minimum: ₹1.00</small>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-outline" style="flex: 1;" onclick="window.closeTopUpModal()">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary" id="payNowBtn" style="flex: 1;">
                        <span id="payNowText">
                            <i class="fas fa-credit-card"></i>
                            <span>Pay Now</span>
                        </span>
                        <span id="payNowLoader" style="display: none; align-items: center; justify-content: center; gap: 8px;">
                            <i class="fas fa-spinner fa-spin"></i>
                            <span>Processing...</span>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Start Charging Modal -->
    <div id="startChargingModal" class="modal" style="display: none;" onclick="if(event.target === this) window.closeStartChargingModal()">
        <div class="modal-content" onclick="event.stopPropagation()">
            <div class="modal-header">
                <h2>Start Charging</h2>
                <button class="modal-close" onclick="window.closeStartChargingModal()" type="button">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="startChargingForm" onsubmit="window.handleStartCharging(event)">
                <div class="form-group">
                    <label class="form-label">Charger</label>
                    <input type="text" class="form-input" id="chargingChargerName" readonly placeholder="Select charger">
                </div>
                <div class="form-group">
                    <label class="form-label">Price per kWh</label>
                    <div style="display: flex; align-items: center; gap: 8px; padding: 12px; background: var(--bg-color); border-radius: 8px; margin-bottom: 8px;">
                        <div style="flex: 1;">
                            <div style="font-size: 24px; font-weight: 700; color: var(--primary-color);" id="pricePerKwhDisplay">₹0.00</div>
                            <div style="font-size: 12px; color: var(--text-secondary);">per kWh</div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Amount to Charge (₹)</label>
                    <input type="number" class="form-input" name="amount" id="chargingAmountInput" required min="1" step="0.01" placeholder="Enter amount (e.g., 100.00)" oninput="window.restrictAmountInputMain(this); window.calculateEstimatedCost()">
                    <div id="amountErrorMsg" style="display: none; margin-top: 6px; font-size: 12px; color: #dc3545;"></div>
                    <small>Minimum: ₹1.00</small>
                </div>
                <div class="form-group" id="estimatedCostGroup" style="display: none;">
                    <div style="padding: 12px; background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%); border: 1px solid var(--primary-color); border-radius: 8px;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                            <span style="font-size: 14px; color: var(--text-secondary);">Estimated Energy:</span>
                            <span style="font-size: 16px; font-weight: 600; color: var(--text-primary);" id="estimatedEnergy">0.00 kWh</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="font-size: 14px; color: var(--text-secondary);">Total Cost:</span>
                            <span style="font-size: 18px; font-weight: 700; color: var(--primary-color);" id="estimatedCost">₹0.00</span>
                        </div>
                    </div>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-outline" style="flex: 1;" onclick="window.closeStartChargingModal()">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary" style="flex: 1;">
                        <i class="fas fa-bolt"></i> Start Charging
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        // Pass initial tab from server to frontend
        window.INITIAL_USER_TAB = "<%= initialTab %>";
    </script>
    <script type="module" src="/user-panel/app.js"></script>
</body>
</html>

